# QuantCLI Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
TIMESCALE_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://quantcli:${TIMESCALE_PASSWORD}@localhost:5432/quantcli

# =============================================================================
# REDIS CLUSTER
# =============================================================================
REDIS_NODES=localhost:7000,localhost:7001,localhost:7002
REDIS_PASSWORD=

# =============================================================================
# KAFKA
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:29092
SCHEMA_REGISTRY_URL=http://localhost:8081

# =============================================================================
# DATA PROVIDERS - FREE TIER
# =============================================================================

# Alpha Vantage (25 calls/day)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Tiingo (50 symbols/hour, 30+ years historical)
TIINGO_API_KEY=your_tiingo_key_here

# FRED (Federal Reserve Economic Data - Unlimited)
FRED_API_KEY=your_fred_key_here

# Finnhub (60 calls/minute free tier)
FINNHUB_API_KEY=your_finnhub_key_here

# Polygon.io (5 calls/minute free tier - optional)
POLYGON_API_KEY=your_polygon_key_here

# Reddit API (100 queries/minute)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=QuantCLI/1.0

# =============================================================================
# INTERACTIVE BROKERS
# =============================================================================
IBKR_ACCOUNT=DU1234567  # Paper trading account (starts with DU)
IBKR_HOST=127.0.0.1
IBKR_PORT=7497  # 7497 for paper, 7496 for live
IBKR_CLIENT_ID=1

# =============================================================================
# NLP MODELS
# =============================================================================
HUGGINGFACE_TOKEN=your_huggingface_token_here  # Optional, for private models
FINBERT_MODEL=ProsusAI/finbert
FINANCIAL_ROBERTA_MODEL=soleimanian/financial-roberta-large-sentiment

# =============================================================================
# OBSERVABILITY
# =============================================================================
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
GRAFANA_PASSWORD=admin
JAEGER_URL=http://localhost:16686
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# =============================================================================
# MLFLOW
# =============================================================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_ARTIFACT_ROOT=/mlflow/artifacts

# =============================================================================
# FEATURE STORE
# =============================================================================
FEAST_REPO_PATH=./feature_repo

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=INFO
SENTRY_DSN=  # Optional: Sentry error tracking

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
MAX_PORTFOLIO_VALUE_USD=250000  # India LRS limit
MAX_DAILY_LOSS_PCT=2.0
MAX_DRAWDOWN_PCT=15.0
MAX_POSITION_SIZE_PCT=2.0

# =============================================================================
# EXECUTION
# =============================================================================
TRADING_MODE=paper  # paper or live
ENABLE_KILL_SWITCH=true
PRE_TRADE_CHECKS_ENABLED=true

# =============================================================================
# COMPLIANCE
# =============================================================================
CAT_REPORTING_ENABLED=false  # Handled by broker for retail
TRF_REPORTING_ENABLED=false  # Handled by broker for retail

# =============================================================================
# ALTERNATIVE DATA (Optional - Paid Services)
# =============================================================================
RS_METRICS_API_KEY=
ORBITAL_INSIGHT_API_KEY=
YODLEE_API_KEY=
CONTEXT_ANALYTICS_API_KEY=
SENSOR_TOWER_API_KEY=

# =============================================================================
# DEVELOPMENT
# =============================================================================
DEBUG=false
TESTING=false
ENABLE_PROFILING=false
